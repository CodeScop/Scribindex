<%= form_for [@notable, @note] do |f| %>
  <% if @note.errors.any? %>
    <div class="error_messages">
      <h2>Please correct the following errors.</h2>
      <ul>
      <% @note.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="form-group">
    <%= f.text_field :title, placeholder: "Description", class: "form-control" %>
  </div>

  <div class="form-group">
    <%= f.cktext_area :content, rows: 8, placeholder: "Note", class: "form-control"%>
  </div>

  <div class="form-group">
    <%= f.submit "Finish Note", class: "btn btn-primary" %>
  </div>
<% end %>