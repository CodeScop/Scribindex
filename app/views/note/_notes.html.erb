<div class="panel-group" id="accordion" role="tablist" aria-multiselectable="true">
	<% @notes.each do |note| %>
		<div class="panel panel-default">
			<div class="panel-heading" role="tab" id="heading<%= note.id %>">
				<h4 class="panel-title">
					<%= link_to 'x', [@notable, note] , method: :delete, data: { confirm: 'Are you sure?' }, class: "pull-right" %>
					<a class="collapsed btn-block" role="button" data-toggle="collapse" data-parent="#accordion" href="#collapse<%= note.id %>" aria-expanded="false" aria-controls="collapse<%= note.id %>">
						<%= note.title %>
					</a>
					
				</h4>
			</div> <!-- end heading -->
			<div id="collapse<%= note.id%>" class="panel-collapse collapse" role="tabpanel" aria-labelledby="heading<%= note.id %>">
				<div class="panel-body">
					<%= raw note.content %>
				</div>
			</div>
		</div>
	<% end %>
</div>