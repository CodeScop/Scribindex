<p id="notice"><%= notice %></p>

<h2 class="text-center"><%= @character.nym %></h2>

<div class="row">
  <div class="col-xs-12">
    <%= link_to 'Edit', edit_character_path(@character),class: "btn btn-block btn-info" %>
  </div>
  <div class="col-sm-4 col-md-3">
    <h3>Quick Facts:</h3>
    <div class="monoinfo">
      <dl>
        <dt>Project</dt>
        <dd><%= link_to @character.project.title, project_path(id: @character.project_id) %></dd>
        <dt>Full Name</dt>
        <dd> <%= @character.fullname %></dd>
        <dt>Born</dt>
        <dd><%= @character.birthyear %></dd>
        <dt>Group Memberships</dt>
        <% @character.memberships.each do |m| %>
          <dd><%= link_to m.group.title, m.group %> as <%= m.role %></dd>
        <% end %>
      </dl>
    </div>
    <div class="well">
      <h3>Add More Groups:</h3>
      <%= form_with url: charmem_path do |form| %>
        <div class="form-group">
         <%= form.select :group_id, @other_groups.collect { |g| [ g.title, g.id]}, {include_blank: "Group Name"}, class: "form-control" %>
         <%= form.hidden_field :character_id, value: @character.id %>
        </div>
        <div class="form-group">
         <%= form.text_field :role, placeholder: "Role in group", class: "form-control" %>
        </div>
        <div class="form-group">
          <%= form.submit "Make New Membership", class: "btn btn-primary" %>
        </div>
      <% end %>
    </div>
  </div>
  <div class="col-sm-8 col-md-9">
    <h3>The Details:</h3>
    <%= raw @character.details %>
  </div>
</div>
<div class="row">
  <div class="col-xs-12">
    <h2 class="text-center">Notes</h2>
    <%= render "note/notes" %>
    <h4 class="text-center">New Note:</h4>
    <%= render "note/form" %>
  </div>
</div>
