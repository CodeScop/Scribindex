<p id="notice"><%= notice %></p>
<div class="jumbotron">
<h1><%= @scene.story.project.title %></h1>
<h2 class="lead">Scene <%= @scene.position %>: <%= @scene.title %></h2>
</div>


<div class="well">
  <%= raw @scene.content %>
</div>


<div class="row">
	<div class="col-xs-4 col-sm-3">
		<%= link_to 'Edit', edit_scene_path(@scene), class: "btn btn-info" %>
		<ul class="nav nav-pills">
			<li role="presentation">
				<% if @previous %>
					<%= link_to "< #{@previous.title}", scene_path(@previous) %>
				<% end %>
			</li>
			<li role="presentation">
				<% if @next %>
					<%= link_to "#{@next.title} >", scene_path(@next) %>
				<% end %>
			</li>
		</ul>
	</div>

	<div class="col-xs-8 col-sm-9">
		<h2 class="text-center">Notes</h2>
		<%= render "note/notes" %>
		<h4 class="text-center">New Note:</h4>
		<%= render "note/form" %>
	</div>
</div>