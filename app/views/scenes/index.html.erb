<p id="notice"><%= notice %></p>

<% if current_story %>

<div class="jumbotron mini">
  <%= link_to 'New Scene', new_scene_path, class: "btn btn-success btn-lg pull-right" %>
  <h1><%= current_project.title %> Scenes</h1>
</div>

<div class="row">
  <div class="col-md-9 col-md-offset-1">
    <table class="table table-hover text-center table-bordered">

      <tbody class="sortable">
        <% @scenes.each_with_sortable_id do |scene, sortable_id| %>
          <tr id="<%= sortable_id %>">
            <td><h4><%= scene.position + 1 %></h4></td>
            <td><h4><%= link_to scene.title, scene %></h4></td>
            <td>
              <%= link_to edit_scene_path(scene) do %>
                <button class="btn btn-info btn-sm">
                  <span class="glyphicon glyphicon-pencil " aria-hidden="true"></span>
                </button>
              <% end %>
              <%= link_to scene, method: :delete, data: { confirm: 'Are you sure?' } do %>
                <button class="btn btn-danger btn-sm">
                  <span class="glyphicon glyphicon-remove" aria-hidden="true"></span>
                </button>
              <% end %>
            </td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>
</div>

<% else %>

  <div class="jumbotron">
    <h1>Unauthorized</h1>
    <h3 class="lead">Sorry, you somehow navigated here without going through a project. You have to click to this page through a project's page to make sure you're only looking at scenes from the current project. Go back to your project's page and try again.</h3>
    <%= link_to "My Projects", root_path, class: "btn btn-lg btn-block btn-default" %>
  </div>

<% end %>
