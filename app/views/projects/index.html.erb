<p id="notice"><%= notice %></p>

<div class="jumbotron">
  <h2><%= current_user.username %>'s Projects</h2>
</div>

<div class="row">
  <% @projects.each do |project| %>
    <div class="col-md-6">
      <div class="panel panel-primary">
        <%= link_to project do %>
        <div class="panel-heading bg-primary">
          <div class="panel-title text-center">
            <%= project.title %>
          </div>
        </div>
        <% end %>
        <div class="panel-body">
          <%= (raw project.description.truncate(200)) %>
        </div>
      </div>
    </div>
  <% end %>
</div>
